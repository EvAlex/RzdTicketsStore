@model RzdTicketsStore.Models.TrainTrip

@{
    ViewBag.Title = "Create";
}

<h2>Введите новые данные рейса @Model.DepartureStation.Name - @Model.ArrivalStation.Name</h2>

<form action="@Url.Action("Create")" method="post" class="form-horizontal">
    <input type="hidden" name="Id" value="@Model.Id" />
    <input type="hidden" name="DepartureStation.Id" value="@Model.DepartureStation.Id" />
    <input type="hidden" name="ArrivalStation.Id" value="@Model.ArrivalStation.Id" />
    <div class="form-group">
        <label for="inputDepartureTime" class="col-sm-2 control-label">Время отправления</label>
        <div class="col-sm-10">
            <input type="datetime" name="DepartureTime" class="form-control" value="@Model.DepartureTime" />
        </div>
    </div>
    <div class="form-group">
        <label for="inputArrivalTime" class="col-sm-2 control-label">Время прибытия</label>
        <div class="col-sm-10">
            <input type="datetime" name="ArrivalTime" class="form-control" value="@Model.ArrivalTime" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">Сохранить</button>
        </div>
    </div>
</form>

