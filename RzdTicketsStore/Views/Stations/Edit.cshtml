@model RzdTicketsStore.Models.Station

@{
    ViewBag.Title = "Create";
}

<h2>Введите новое название название станции @Model.Name</h2>

<form action="@Url.Action("Edit")" method="post" class="form-horizontal">
    <div class="form-group">
        <label for="inputName" class="col-sm-2 control-label">Название станции</label>
        <div class="col-sm-10">
            <input type="hidden" name="Id" value="@Model.Id"/>
            <input type="text" class="form-control" id="inputName" placeholder="название" name="Name" value="@Model.Name">
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">Сохранить</button>
        </div>
    </div>
</form>

