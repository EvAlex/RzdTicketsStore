@model RzdTicketsStore.Models.Station

@{
    ViewBag.Title = "Create";
}

<h2>Введите название станции</h2>

<form action="@Url.Action("Create")" method="post" class="form-horizontal">
    <div class="form-group">
        <label for="inputName" class="col-sm-2 control-label">Название станции</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="inputName" placeholder="название" name="Name">
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">Создать</button>
        </div>
    </div>
</form>

